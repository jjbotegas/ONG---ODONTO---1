// Sistema SPA simples
const links = document.querySelectorAll('nav ul li a');

links.forEach(link => {
  link.addEventListener('click', function(e) {
    const href = this.getAttribute('href');

    if (href.startsWith('#')) {
      e.preventDefault();
      const section = document.querySelector(href);
      section.scrollIntoView({ behavior: 'smooth' });
    }
  });
});
